# ============================================
# ActorHub.ai API - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# App
DEBUG=true
APP_NAME=ActorHub.ai
APP_VERSION=1.0.0

# Database (PostgreSQL with pgvector)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/actorhub
REDIS_URL=redis://localhost:6380

# JWT Auth (REQUIRED - generate a secure random string)
JWT_SECRET=your-secret-key-here-min-32-chars
JWT_ALGORITHM=HS256

# Storage (MinIO for local, S3 for production)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:9000
S3_BUCKET_ACTOR_PACKS=actorhub-actor-packs
S3_BUCKET_UPLOADS=actorhub-uploads

# Vector Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION=face_embeddings

# AI/ML APIs (Optional - features will be limited without these)
OPENAI_API_KEY=                    # Not currently used
REPLICATE_API_TOKEN=               # For LoRA training
ELEVENLABS_API_KEY=                # For voice cloning
FAL_KEY=                           # Not currently used

# Payments (Stripe) - REQUIRED for marketplace
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Celery (Background tasks)
CELERY_BROKER_URL=redis://localhost:6380/0
CELERY_RESULT_BACKEND=redis://localhost:6380/0

# Feature Flags
ENABLE_BLOCKCHAIN=false
ENABLE_ACTOR_PACKS=true
ENABLE_MARKETPLACE=true
ENABLE_VOICE_CLONING=true

# Mock Modes (for local development without ML dependencies)
# Set to false for production or when InsightFace is installed
FACE_RECOGNITION_MOCK=true     # Use random embeddings instead of InsightFace
QUALITY_ASSESSMENT_MOCK=true   # Return fixed quality scores

# Face Recognition
FACE_SIMILARITY_THRESHOLD=0.80
FACE_DUPLICATE_THRESHOLD=0.85
FACE_EMBEDDING_SIZE=512

# Sentry (Error Monitoring - Optional)
SENTRY_DSN=
