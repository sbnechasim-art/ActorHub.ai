# ============================================
# ActorHub.ai API - Production Environment
# ============================================
# Copy to .env for production deployment
# ALL values must be properly set!

# App Settings
DEBUG=false
APP_NAME=ActorHub.ai
APP_VERSION=1.0.0

# Database (Use secure connection string with SSL)
DATABASE_URL=postgresql://user:password@db-host:5432/actorhub?sslmode=require
REDIS_URL=redis://:password@redis-host:6379

# JWT Auth (REQUIRED - use a secure 64+ char random string)
# Generate with: openssl rand -hex 32
JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# Storage (AWS S3 or compatible)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
# Leave empty for AWS S3, set for S3-compatible services
AWS_ENDPOINT_URL=
S3_BUCKET_ACTOR_PACKS=actorhub-actor-packs
S3_BUCKET_UPLOADS=actorhub-uploads

# Vector Database (Qdrant Cloud or self-hosted)
QDRANT_HOST=your-qdrant-host.cloud
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION=face_embeddings

# AI/ML APIs
REPLICATE_API_TOKEN=
ELEVENLABS_API_KEY=

# Payments (Stripe - use live keys)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Celery (Background tasks)
CELERY_BROKER_URL=redis://:password@redis-host:6379/0
CELERY_RESULT_BACKEND=redis://:password@redis-host:6379/0

# Feature Flags
ENABLE_BLOCKCHAIN=false
ENABLE_ACTOR_PACKS=true
ENABLE_MARKETPLACE=true
ENABLE_VOICE_CLONING=true

# Face Recognition
FACE_SIMILARITY_THRESHOLD=0.80
FACE_DUPLICATE_THRESHOLD=0.85
FACE_EMBEDDING_SIZE=512

# Monitoring (Sentry)
SENTRY_DSN=

# Frontend URL (for CORS and redirects)
FRONTEND_URL=https://actorhub.ai
