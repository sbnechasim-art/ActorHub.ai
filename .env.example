# ============================================
# ActorHub.ai Environment Configuration
# ============================================

# App
NODE_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/actorhub
REDIS_URL=redis://localhost:6379

# Authentication (Clerk)
CLERK_SECRET_KEY=sk_test_xxxxx
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_WEBHOOK_SECRET=whsec_xxxxx
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Storage (AWS S3 / MinIO for local)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:9000
S3_BUCKET_ACTOR_PACKS=actorhub-actor-packs
S3_BUCKET_UPLOADS=actorhub-uploads

# AI/ML APIs
OPENAI_API_KEY=sk-xxxxx
REPLICATE_API_TOKEN=r8_xxxxx
ELEVENLABS_API_KEY=xxxxx
FAL_KEY=xxxxx

# Vector Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# Blockchain (Optional)
ALCHEMY_API_KEY=xxxxx
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/xxxxx
PRIVATE_KEY=0x_deployer_private_key

# Payments (Stripe)
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Monitoring
SENTRY_DSN=
DATADOG_API_KEY=

# Feature Flags
ENABLE_BLOCKCHAIN=false
ENABLE_ACTOR_PACKS=true
ENABLE_MARKETPLACE=true
ENABLE_VOICE_CLONING=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Celery Worker
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
