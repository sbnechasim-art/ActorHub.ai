{
  "name": "actorhub-ai",
  "version": "1.0.0",
  "private": true,
  "description": "ActorHub.ai - Digital Identity Protection & Marketplace Platform",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "cd apps/web && pnpm dev",
    "dev:api": "cd apps/api && python -m uvicorn app.main:app --reload --port 8000",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "db:migrate": "cd apps/api && alembic upgrade head",
    "db:seed": "cd apps/api && python scripts/seed.py",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
